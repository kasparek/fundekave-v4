Options +FollowSymLinks -MultiViews

RewriteEngine On

RewriteCond %{HTTP_HOST} ^(xspace\.cz)$ [NC]
RewriteRule ^(.*)$ http://www.%1/$1 [R=p301,L]

# en.domain.com/* --> /*?l=en
RewriteCond %{ENV:REDIRECT_STATUS} ^$
RewriteCond %{HTTP_HOST} !^www\.xspave\.cz$ [NC]
RewriteCond %{HTTP_HOST} ^(www\.)?([a-z]{2})\.xspave\.cz$ [NC]
RewriteRule ^(.*)$ /$1?u=%2 [QSA,L]