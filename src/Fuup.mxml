<fu:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:fu="net.fundekave.*" 
	addedToStage="{ready();}" 
	xmlns:components="net.fundekave.fuup.view.components.*"
	>
	<fx:Script>
		<![CDATA[
			
			public static const WIDTH:int = 600;
			public static const HEIGHT:int = 35;
			import net.fundekave.fuup.ApplicationFacade;
			public static const NAME:String = "fudeup";
			private var facade:ApplicationFacade = ApplicationFacade.getInstance( NAME );
			
			private function ready():void {
				facade.startup(this);
			}
		]]>
	</fx:Script>
	
	<components:MainDisplay id="mainDisplay" />
	
</fu:Application>
